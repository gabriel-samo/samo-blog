{
  "name": "samo-blog",
  "version": "0.0.1",
  "description": "A demo blog app using MERN (MongoDB, Express, React, NodeJS) with typescript and tailwind for styling",
  "main": "dist/server.js",
  "scripts": {
    "watch:client": "node esbuild-config/client.dev.mjs",
    "watch:server": "node esbuild-config/server.dev.mjs",
    "watch:restart-server": "nodemon --config nodemon.json",
    "dev": "npm-run-all --parallel watch:*",
    "build:client": "node esbuild-config/client.prod.mjs",
    "build:server": "node esbuild-config/server.prod.mjs",
    "build": "npm-run-all --sequential build:*",
    "start": "node dist/server.js"
  },
  "keywords": [
    "typescript",
    "react",
    "express",
    "esbuild",
    "boilerplate"
  ],
  "author": "Gabriel Samoylov",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "flowbite": "^2.3.0",
    "flowbite-react": "^0.7.8",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.19.2",
    "esbuild-postcss": "^0.0.4",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6"
  }
}
